#!/bin/sh

if [ -e ./@target@ ] && [ -e ./Makefile.am ] ; then
    echo "Running uninstalled @target@ in the foreground."
    THIS_PATH="../Util:../BeagleClient:."
    THIS_EXE="./@target@"
    EXTRA_ARGS="--nofork"
    FILTER_PATH="../Filters"
else
    THIS_PATH="@pkglibdir@"
    THIS_EXE="@pkglibdir@/@target@"
    EXTRA_ARGS=""
    FILTER_PATH=$BEAGLE_FILTER_PATH
fi

MONO_GAC_PREFIX="@gacprefix@:$MONO_GAC_PREFIX" MONO_PATH="$THIS_PATH:$MONO_PATH" BEAGLE_FILTER_PATH=$FILTER_PATH mono --debug $THIS_EXE $EXTRA_ARGS "$@"

