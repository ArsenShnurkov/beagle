#!/bin/sh

if [ -e ./@target@ ] && [ -e ./Makefile.am ] ; then
    echo "*** Running uninstalled @target@ ***"
    THIS_PATH="../Util:../BeagleClient"
    THIS_EXE="./@target@"
    THIS_FILTERS="../Filters"
else
    THIS_PATH="@pkglibdir@:@libdir@"
    THIS_EXE="@pkglibdir@/@target@"
fi

MONO_GAC_PREFIX="@gacprefix@" MONO_PATH="$THIS_PATH:$MONO_PATH" BEAGLE_FILTER_PATH="$BEAGLE_FILTER_PATH:$THIS_FILTERS" mono --debug $MONO_EXTRA_ARGS $THIS_EXE "$@"

