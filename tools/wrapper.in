#!/bin/sh

if [ -e ./@target@ ] && [ -e ./Makefile.am ] ; then
    echo "*** Running uninstalled @target@ ***"
    THIS_PATH="../Util:../Lucene.Net:../Filters:../indexer"
    THIS_EXE="./@target@"
else
    THIS_PATH="@pkglibdir@:@libdir@"
    THIS_EXE="@pkglibdir@/@target@"
fi

MONO_PATH="$THIS_PATH:$MONO_PATH" mono --debug $MONO_EXTRA_ARGS $THIS_EXE "$@"

